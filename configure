#!/usr/bin/env python
#-*- mode: python; -*-
from support.config import ConfigBuilder

NAME = 'cnote'
VERSION = '0.5.0'

c = ConfigBuilder()

c.config('version', VERSION)
c.config('canonical-name', NAME)
c.config('package', NAME)
c.config('package-bugreport', 'bobbypowers@gmail.com')

if c.debug_build:
    c.append('cflags', '-g')

if c.optimize_build:
    c.append('cflags', '-O3 -flto -D_FORTIFY_SOURCE=2')
else:
    c.append('cflags', '-O0')

c.require('libevent >= 2.0')
c.require('libevent_pthreads >= 2.0')
c.require('glib-2.0')
c.require('taglib_c')

c.append('cflags', '-pthread -D_GNU_SOURCE=1 -DSQLITE_OMIT_LOAD_EXTENSION')
c.append('ldflags', '-Wl,--no-add-needed')

c.append('libs', '../vendor/jemalloc/lib/libjemalloc.a')

c.prefer_cc('clang')

c.generate()
